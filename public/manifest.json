{
  "manifest_version": 2,
  "name": "QuickTemp React",
  "version": "1.0",
  "description": "A simple cross-browser extension built with React",
  "browser_action": {
    "default_popup": "index.html"
  },
  "icons": {
    "61": "icon61.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "unlimitedStorage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "furinehigh@outlook.com",
      "strict_min_version": "109.0"
    }
  }
}
